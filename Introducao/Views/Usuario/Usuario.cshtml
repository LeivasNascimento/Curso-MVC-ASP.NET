@model Introducao.Models.Usuario

@{
    ViewBag.Title = "Usuario";
}

<h2>Usuario</h2>
<h2>Bem vindo Usuário @Model.Nome</h2>


<h2>Validação de Usuparios</h2>
@using (Html.BeginForm("Usuario", "Usuario", FormMethod.Post))
{
    @Html.ValidationSummary(true) //reporta se houver problemas no ato do envio do form. somente o formulário e não seus campos
    <fieldset>
        <legend> Dados do usuário</legend>
    </fieldset>
    <div class="editor-label">
        @Html.LabelFor(x => x.Nome)

    </div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Nome)
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="editor-label">
        @Html.LabelFor(x => x.Observacoes)

    </div>
    <div class="editor-field">
        @Html.TextAreaFor(x => x.Observacoes)
        @Html.ValidationMessageFor(x => x.Observacoes)
    </div>


    <div class="editor-label">
        @Html.LabelFor(x => x.Idade)

    </div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Idade)
        @Html.ValidationMessageFor(x => x.Idade)
    </div>

    <div class="editor-label">
        @Html.LabelFor(x => x.Login)

    </div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Login)
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="editor-label">
        @Html.LabelFor(x => x.Email)

    </div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="editor-label">
        @Html.LabelFor(x => x.Senha)

    </div>
    <div class="editor-field">
        @Html.PasswordFor(x => x.Senha)
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <div class="editor-label">
        @Html.LabelFor(x => x.ConfirmarSenha)

    </div>
    <div class="editor-field">
        @Html.PasswordFor(x => x.ConfirmarSenha)
        @Html.ValidationMessageFor(x => x.ConfirmarSenha)
    </div>

    <br />
    <div>
        <p>
            <input type="submit" value="Enviar" />
        </p>
    </div>

    @section Scripts{ 
        @Scripts.Render("~/budles/jqueryval");
    }


